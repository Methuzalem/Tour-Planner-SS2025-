<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToWidth="true" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.14-internal" fx:controller="at.technikumwien.tourplanner.view.EditLogController">
    <VBox spacing="15.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>

        <GridPane hgap="10" vgap="15">
            <columnConstraints>
                <ColumnConstraints minWidth="100" prefWidth="150" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="200" />
            </columnConstraints>

            <!-- Log date -->
            <Label style="-fx-font-weight: bold;" text="Datum:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label style="-fx-font-weight: bold;" text="Difficulty (1 = low - 10 = high):" GridPane.rowIndex="3" />
            <Slider fx:id="difficultySlider" blockIncrement="1" majorTickUnit="1" max="10" min="1" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="5" GridPane.columnIndex="1" GridPane.rowIndex="3" />







            <!-- Tour notes -->
            <Label style="-fx-font-weight: bold;" text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextArea fx:id="tourDescriptionTextArea" prefRowCount="3" promptText="Enter tour description" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />



            <!-- To location -->
            <Label style="-fx-font-weight: bold;" text="To:" GridPane.rowIndex="4" />
            <TextField fx:id="toTextField" promptText="Enter destination" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <!-- Transport type -->
            <Label style="-fx-font-weight: bold;" text="Transport Type:" GridPane.rowIndex="5" />
            <ComboBox fx:id="transportTypeComboBox" promptText="Select transport type" GridPane.columnIndex="1" GridPane.rowIndex="5" />

            <!-- Tour distance -->
            <Label style="-fx-font-weight: bold;" text="Distance (km):" GridPane.rowIndex="6" />
            <TextField fx:id="distanceTextField" promptText="Enter distance in kilometers" GridPane.columnIndex="1" GridPane.rowIndex="6" />

            <!-- Estimated time -->
            <Label style="-fx-font-weight: bold;" text="Estimated Time:" GridPane.rowIndex="7" />
            <TextField fx:id="estimatedTimeTextField" promptText="Enter estimated time (e.g., 2h 30min)" GridPane.columnIndex="1" GridPane.rowIndex="7" />

            <!-- Route information -->
            <Label style="-fx-font-weight: bold;" text="Route Information:" GridPane.rowIndex="8" />
            <TextArea fx:id="routeInfoTextArea" prefRowCount="3" promptText="Enter route information" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="8" />
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>

        </GridPane>

        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 20 0 0 0;">
            <Button onAction="#onCancelLogButtonClick" text="Cancel" />
            <Button defaultButton="true" onAction="#onSaveLogButtonClick" text="Save" />
        </HBox>
    </VBox>
</ScrollPane>
