<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="at.technikumwien.tourplanner.view.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    
    <top>
        <HBox spacing="10" alignment="CENTER">
            <Label text="Tour Planner" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        </HBox>
    </top>
    
<center>
    <HBox spacing="10">
        <!-- Left panel (Tour List) - 1/3 width -->
        <VBox spacing="10" HBox.hgrow="ALWAYS" maxWidth="Infinity" prefWidth="100">
            <Label text="Tour List:" style="-fx-font-weight: bold;"/>
            <ListView fx:id="tourListView" VBox.vgrow="ALWAYS"/>
        </VBox>

        <!-- Right panel (Placeholder) - 2/3 width -->
        <VBox spacing="10" HBox.hgrow="ALWAYS" maxWidth="Infinity" prefWidth="200">
            <Label text="Tour Details:" style="-fx-font-weight: bold;"/>
            <!-- Placeholder content -->
        </VBox>
    </HBox>
</center>
    
    <bottom>
    </bottom>
</BorderPane>
